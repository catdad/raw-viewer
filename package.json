{
  "name": "raw-viewer",
  "productName": "Raw Viewer",
  "appId": "com.catdad.raw-viewer",
  "version": "1.0.0-beta10",
  "description": "raw-viewer",
  "main": "main.js",
  "scripts": {
    "electron:rebuild": "electron-rebuild --types prod,optional",
    "fetch:exiftool": "node scripts/exiftool-install.js",
    "fetch:fonts": "node scripts/fonts-install.js",
    "fetch:gprtools": "node scripts/gprtools-install.js",
    "fetch:appicon": "node scripts/appicon-create.js",
    "postinstall": "npm-run-all --silent electron:rebuild fetch:*",
    "lint": "eslint main.js lib public renderer scripts test",
    "pretest": "node test/lib/downloader.js",
    "test": "mocha --timeout 30000 --slow 0 test/**.test.js",
    "citest": "xvfb-maybe npm test && npm run -s lint",
    "start": "electron .",
    "dev": "electronmon .",
    "exif-kill": "taskkill /IM exiftool.exe /F",
    "exif-find": "tasklist | findstr exiftool",
    "package": "node scripts/build-package.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/catdad/raw-viewer.git"
  },
  "author": "Kiril Vatev <vatev.1@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/catdad/raw-viewer/issues"
  },
  "homepage": "https://github.com/catdad/raw-viewer#readme",
  "build": {
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "dist/icon.icns",
      "darkModeSupport": true
    },
    "dmg": {
      "icon": "dist/icon.icns",
      "artifactName": "${name}-v${version}-setup.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "dist/icon.ico"
    },
    "nsis": {
      "artifactName": "${name}-v${version}-setup.${ext}"
    },
    "portable": {
      "artifactName": "${name}-v${version}-portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "executableName": "Raw Viewer",
      "category": "Graphics"
    },
    "appImage": {
      "artifactName": "${name}-v${version}.${ext}"
    }
  },
  "electronmon": {
    "patterns": ["!test/**"]
  },
  "dependencies": {
    "ag-psd": "^6.2.0",
    "dcraw": "^1.0.3",
    "dcraw-vendored-darwin": "9.28.1",
    "dcraw-vendored-linux": "9.28.1",
    "dcraw-vendored-win32": "9.28.1",
    "fast-deep-equal": "^3.1.1",
    "fs-extra": "^9.0.0",
    "fs-watch-file": "^1.0.1",
    "heic-decode": "^1.1.1",
    "hitime": "^0.3.0",
    "lodash": "^4.17.11",
    "node-fetch": "^2.6.0",
    "os-name": "^3.1.0",
    "p-throttle": "^3.1.0",
    "pretty-bytes": "^5.2.0",
    "semver": "^6.1.0",
    "sharp": "^0.25.2",
    "trash": "^5.2.0",
    "universal-analytics": "^0.4.20",
    "utif": "^3.1.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@fiahfy/icns-convert": "0.0.6",
    "archiver": "^3.0.0",
    "canvas": "^2.6.0",
    "chai": "^4.2.0",
    "chalk": "^2.4.2",
    "del": "^5.1.0",
    "devtron": "^1.4.0",
    "electron": "^8.2.0",
    "electron-builder": "^22.1.0",
    "electron-debug": "^3.0.1",
    "electron-packager": "^14.1.0",
    "electron-rebuild": "^1.10.1",
    "electronmon": "^1.1.0",
    "eslint": "^5.16.0",
    "figures": "^3.1.0",
    "form-data": "^2.5.1",
    "jimp": "^0.9.8",
    "mocha": "^6.2.2",
    "npm-run-all": "^4.1.5",
    "png-to-ico": "^2.0.6",
    "rootrequire": "^1.0.0",
    "shellton": "^5.0.0",
    "spectron": "^10.0.1",
    "tar": "^6.0.1",
    "tempy": "^0.5.0",
    "unzipper": "^0.10.5",
    "xvfb-maybe": "^0.2.1",
    "yargs-parser": "^18.1.2"
  }
}
